<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PawfectMatch" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorTertiary">#FFFFFF</item>
        <item name="colorSurface">#ffffff</item>

        <!-- Fix the status bar -->
        <item name="android:statusBarColor">@color/white</item> <!-- dark icons for light background -->
    </style>

    <style name="Theme.PawfectMatch" parent="Base.Theme.PawfectMatch" />

    <style name="Theme.PawfectMatch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PawfectMatch.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />
    <style name="Theme.PawfectMatch.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>